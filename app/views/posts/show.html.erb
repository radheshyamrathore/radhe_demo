<h1>Post</h1>
<ul>
  <li><%= @post.title %></li>
  <li><%= @post.description %></li>
</ul>
<% if @post.user_id == current_user.id %>
  <ul>
    <li><%= link_to "Destroy", article_post_path(@article, @post), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure for delete article?"
                    } %></li>
    <li><%= link_to "Edit" ,edit_article_post_path(@article, @post) %></li>
  </ul>
<% end %>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <ul>
    <li><%= comment.commenter %></li>
    <li><%= comment.description %></li>
    <% if comment.user_id == current_user.id %>
    <li><%= link_to "Destroy", article_post_comment_path(@article, @post, comment), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure for delete article?"
                  } %></li>
    <% end %>
  </ul>
<% end %>

<h3>Add a comment:</h3>
<%= form_with model: [@article, @post, @post.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :desciption %> <br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
